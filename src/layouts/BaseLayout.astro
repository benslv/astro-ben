---
const { title } = Astro.props;

import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
	</head>
	<body>
		<article class="article">
			{title && <h1>{title}</h1>}
			<slot />
		</article>
	</body>
	<style>
		article {
			max-width: 768px;
			margin: 0 auto;
			padding: 0 16px;
		}
	</style>
</html>
